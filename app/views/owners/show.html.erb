<h3><%= @owner.full_name %></h3>

<div class="row">
  <table>
    <tr>
      <th>Email</th>
      <th>Company Name</th>
      <th>Building Addresses</th>
    </tr>
    <tr>
      <td><%= @owner.email %></td>
      <td><%= @owner.company_name %></td>
      <td>
        <% @owner.buildings.each do |building| %>
          <li><%= building.street_address %></li>
        <% end %>
      </td>
    </tr>
  </table>
</div>

<p><%= link_to 'Add a Building', new_owner_building_path(@owner) %></p>
<p><%= link_to "All #{@owner.first_name}'s Buildings", 
  owner_buildings_path(@owner) %></p>