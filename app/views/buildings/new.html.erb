<h3>Add Building</h3>

<%= simple_form_for @building do |f| %>
  <%= f.input :street_address, label: 'Street Address', input_html: { size: 30 } %>
  <%= f.input :city, input_html: { size: 30 } %>
  <%= f.input :state, collection: @states %>
  <%= f.input :postal_code, label: 'Postal Code', input_html: { size: 30 } %>
  <%= f.input :description, as: :text %>
  <%= f.button :submit, 'Add Building' %>
<% end %>